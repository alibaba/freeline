<idea-plugin version="2">
    <id>com.apkfuns.plugin.freeline</id>
    <name>Freeline Plugin</name>
    <version>1.1.5</version>
    <vendor email="" url="https://github.com/alibaba/freeline/tree/master/android-studio-plugin">act262, 舞影凌风</vendor>

    <description><![CDATA[
      android studio plugin for <a href='https://github.com/alibaba/freeline'>Freeline</a><br/><br/>
      <img src='http://qiniu.apkfuns.com/54F6776E-B1A4-4693-8858-53E030DD9312.png' width='420' height='200'/> <br/>
      <img src='http://qiniu.apkfuns.com/8A1FA6B7-83EE-4749-9C40-311DD0182638.png' width='420' height='200'/><br/>
      <br/>

      <br/><b>Contributors</b><br/>
      <a href='http://github.com/act262'>act262</a>、
      <a href='http://github.com/pengwei1024'>舞影凌风</a>、

      <br/><br/>
      <br/><b>ISSUES</b><br/>
      <a href='https://github.com/alibaba/freeline/issues'>Submit Suggestions or Bugs</a><br/><br/>
    ]]></description>

    <change-notes><![CDATA[
      <ul>
      <li>
          <b>1.1.5</b><br/>
          support Android studio 3.1.x
      </li>
      <li>
          <b>1.1.4</b><br/>
          Add feedback channel
      </li>
      <li>
          <b>1.1.3</b><br/>
          fix V2.3 beta2-3 crash
        </li>
      <li>
         <b>1.1.2</b><br/>
          add Automatic integration, support Android studio 2.3
      </li>
      <li>
         <b>1.0.9</b><br/>
          add default run action shortcut、support jdk 1.7+
      </li>
      <li>
          <b>1.0.8</b><br/>
          support add run configurations 'Freeline Run'
      </li>
      <li>
          <b>1.0.7</b><br/>
          add Freeline ToolWindow and some tools
        </li>
      </ul>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <depends>org.jetbrains.android</depends>
    <depends>org.jetbrains.plugins.terminal</depends>
    <depends>org.jetbrains.plugins.gradle</depends>
    <depends>org.intellij.groovy</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Freeline" anchor="bottom" icon="/icons/icon.png"
                    factoryClass="com.antfortune.freeline.idea.views.FreelineToolWindowFactory" secondary="false"/>

        <!-- Freeline Run Configuration Type define -->
        <configurationType implementation="com.antfortune.freeline.idea.configuration.FreeConfigurationType"
                           id="com.antfortune.freeline.plugin.config.FreeRunType"/>

        <!-- Freeline project UI service -->
        <projectService serviceImplementation="com.antfortune.freeline.idea.utils.FreeUIManager"
                        serviceInterface="com.antfortune.freeline.idea.utils.FreeUIManager"
                        id="com.antfortune.freeline.plugin.service.FreeUIManager"/>

        <applicationService serviceImplementation="com.antfortune.freeline.idea.models.FreelineConfiguration" />

    </extensions>

    <actions>
        <!-- Freeline default run action -->
        <action id="Plugin_Freeline_Run" class="com.antfortune.freeline.idea.actions.FreelineRunAction"
                text="Run Freeline" description="Run Freeline">
            <add-to-group group-id="ToolbarRunGroup" anchor="after" relative-to-action="RunnerActions"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift F10"/>
        </action>

        <group>
            <separator/>
            <add-to-group group-id="BuildMenu" anchor="last"/>
        </group>

        <!-- Freeline tools -->
        <group id="Plugin_Freeline_Tools" text="Freeline" description="Freeline" popup="true">
            <action id="Plugin_Freeline_Run_Debug" class="com.antfortune.freeline.idea.actions.DebugRunAction" text="Run Freeline Debug"
                    description="Run Freeline Debug">
            </action>
            <action id="Plugin_Freeline_Run_Force" class="com.antfortune.freeline.idea.actions.ForceRunAction" text="Run Freeline Force"
                    description="Run Freeline Force">
            </action>
            <action id="Plugin_Freeline_Run_Update" class="com.antfortune.freeline.idea.actions.UpdateAction" text="Check Freeline Update"
                    description="Check Update">
            </action>
            <separator />
            <action id="Plugin_Freeline_Crash_Reporter" class="com.antfortune.freeline.idea.actions.CrashReporterAction" text="Disable Crash Reporter"
                    description="Disable Crash Reporter" />
            <action id="Plugin_Freeline_Using_Report" class="com.antfortune.freeline.idea.actions.UsingReportAction" text="I'm using Freeline!"
                    description="I'm using Freeline!" />
            <action id="Plugin_Freeline_Feedback" class="com.antfortune.freeline.idea.actions.FeedbackAction" text="Send Feedback"
                    description="Send Feedback" />
            <add-to-group group-id="BuildMenu" anchor="last"/>
        </group>

        <group>
            <separator/>
            <add-to-group group-id="BuildMenu" anchor="last"/>
        </group>
    </actions>

    <project-components>
        <component>
            <interface-class>com.antfortune.freeline.idea.views.FreelineTerminal</interface-class>
            <implementation-class>com.antfortune.freeline.idea.views.FreelineTerminal</implementation-class>
        </component>
    </project-components>

</idea-plugin>
