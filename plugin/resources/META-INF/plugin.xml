<idea-plugin version="2">
    <id>com.micro.freeline.plugin</id>
    <name>Plugin4Freeline</name>
    <version>1.0</version>
    <vendor email="act262@gmail.com" url="http://github.com">Anonymous</vendor>

    <description><![CDATA[
      plugin for <a href="https://github.com/alibaba/freeline">freeline</a>
    ]]></description>

    <change-notes><![CDATA[
      use plugin...
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="FreelineActionID" class="RunFreelineAction" text="Run Freeline"
                description="Run Freeline script command line" icon="/ic_free.jpg">
            <add-to-group group-id="BuildMenu" anchor="last"/>
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <add-to-group group-id="ToolbarRunGroup" anchor="after" relative-to-action="RunnerActions"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift F10"/>
        </action>
    </actions>

</idea-plugin>